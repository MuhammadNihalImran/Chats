<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>whatsapp</title>
    <link rel="stylesheet" type="text/css" href="/style/index.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
  
    <% if (typeof success !== 'undefined' && success.length > 0) { %>
      <div class="alert alert-warning alert-dismissible fade show  col-6 offset-3"  role="alert" style="width: 50vw">
        <strong><%=success%></strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (typeof create !== 'undefined' && create.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show  col-6 offset-3"  role="alert" style="width: 50vw">
        <strong><%=create%></strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (typeof edit !== 'undefined' && edit.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show  col-6 offset-3"  role="alert" style="width: 50vw">
        <strong><%=edit%></strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <div class="p-3 bg-green-200">
      
      <h1 class="text-center text-3xl">chats</h1>
      <hr>
      <br>
    <form method="Get" action="/chats/new">
      <button  class="btn btn-outline-primary">create</button>
    </form>
    <% for(let chat of Allchat){ %>
    <div class="chats card  my-3 ">
      <div class="card-body flex flex-col gap-2 ">
        <h3 class="card-title">from: <b><%=chat.from%> </b></h3>
        <div class="msg flex gap-3 text-center bg-green-200  items-center p-3 rounded-lg ">
          <p class="card-text text-xl font-bold "><%=chat.message%></p>
          <div class="time ">
            
            <p class="text">
              <%=chat.created_at.toString().split(" ")[4] %>
              <p class="text"><%=chat.created_at.toString().split(" ").splice(0,4).join(" ")%></p>
            </p>
          </div>
        </div>
        <h3>recieved by : <b><%=chat.to%></b></h3>
<div class="button flex items-center gap-3">

  <form method="GET" action="/chats/<%= chat._id %>/edit">
    <button  class="btn btn-outline-primary">edit</button>
  </form>
  <form method="POST" action="/chats/<%= chat._id %>?_method=Delete">
    <button  class="btn btn-outline-primary">delete</button>
  </form>
</div>
      </div>
    </div>
    <% }%>

  </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
